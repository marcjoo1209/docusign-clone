# Supabase 설정
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase 관리자 키 (서버사이드에서만 사용)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# NextAuth.js 설정 (인증 라이브러리)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# 개발 환경 설정
NODE_ENV=development

# 파일 업로드 설정
MAX_FILE_SIZE=52428800
# 52428800 = 50MB

# 지원하는 파일 형식
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,jpg,jpeg,png,gif,hwp

# Edge Functions URL (배포 후 설정)
NEXT_PUBLIC_SUPABASE_FUNCTIONS_URL=https://your-project-id.functions.supabase.co

# 외부 서비스 API 키들 (필요한 경우)
# SENDGRID_API_KEY=your-sendgrid-api-key
# GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# 개발용 데이터베이스 URL (로컬 개발 시)
# DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres